<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerColor="#879DCA"
                android:endColor="#0256FC"
                android:startColor="#DC6B49" />
            <corners android:radius="18dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />

            <gradient
                android:angle="45"
                android:endColor="#485461"
                android:startColor="#28313B" />


        </shape>
    </item>
</layer-list>